@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminID</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>@item.AdminStatus</td>
            <td>
                @{
                    if (item.AdminStatus == true)
                    {
                        <a class="btn btn-danger btn-sm" href="/Authorication/DeleteAdmin/@item.AdminID">
                            <i class="fas fa-trash">
                            </i>
                            Pasif Yap
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-warning btn-sm" href="/Authorication/DeleteAdmin/@item.AdminID">
                            <i class="fas fa-trash">
                            </i>
                            Aktif Yap
                        </a>
                    }
                }
            </td>
            <td><a href="/Authorication/EditAdmin/@item.AdminID" class="btn btn-success">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<a href="/Authorication/AddAdmin/" class="btn btn-info">Yeni Admin Tanımla</a>

